# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Polling Configuration
# Intervalo em milissegundos para buscar novos alertas (0 = desabilitado)
# Padrão: 30000 (30 segundos)
NEXT_PUBLIC_ALERTS_POLLING_INTERVAL=30000

# Cleanup Configuration
# Intervalo em milissegundos para verificar e remover alertas expirados
# Padrão: 60000 (1 minuto)
NEXT_PUBLIC_ALERTS_CLEANUP_INTERVAL=60000

# Alert Expiration Times (em milissegundos)
# Tempos de expiração personalizados para cada tipo de alerta
# Fórmula: horas * 60 * 60 * 1000 | dias * 24 * 60 * 60 * 1000
NEXT_PUBLIC_ALERT_EXPIRATION_PESSOA_RISCO=21600000      # 6 horas
NEXT_PUBLIC_ALERT_EXPIRATION_DESLIZAMENTO=172800000     # 48 horas (2 dias)
NEXT_PUBLIC_ALERT_EXPIRATION_ALAGAMENTO=28800000        # 8 horas
NEXT_PUBLIC_ALERT_EXPIRATION_ABRIGO=604800000           # 7 dias
NEXT_PUBLIC_ALERT_EXPIRATION_FALTA_ENERGIA=43200000     # 12 horas
